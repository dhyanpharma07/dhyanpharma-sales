generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Customer {
  id          String      @id @default(uuid())
  name        String
  phone       String?
  address     String?
  gstNumber   String?
  panNumber   String?
  createdAt   DateTime    @default(now())
  drugLicense String?
  salesBills  SalesBill[]
}

model SalesBill {
  id         String    @id @default(uuid())
  billNumber String    @unique
  billDate   DateTime
  billAmount Decimal
  createdAt  DateTime  @default(now())
  customerId String
  payments   Payment[]
  customer   Customer  @relation(fields: [customerId], references: [id])
}

model Payment {
  id          String    @id @default(uuid())
  billId      String
  paymentDate DateTime
  amount      Decimal
  createdAt   DateTime  @default(now())
  bill        SalesBill @relation(fields: [billId], references: [id])
}
