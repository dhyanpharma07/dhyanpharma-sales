generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id           String   @id @default(uuid())
  name         String
  phone        String?
  address      String?
  gstNumber    String?
  drugLicense  String?
  panNumber    String?

  salesBills   SalesBill[]

  createdAt    DateTime @default(now())
}



model SalesBill {
  id         String     @id @default(uuid())
  billNumber String     @unique
  billDate   DateTime
  billAmount Decimal
  createdAt  DateTime   @default(now())

  customerId String
  customer   Customer   @relation(fields: [customerId], references: [id])

  payments   Payment[]
}

model Payment {
  id          String    @id @default(uuid())
  billId      String
  bill        SalesBill @relation(fields: [billId], references: [id])

  paymentDate DateTime
  amount      Decimal
  createdAt   DateTime  @default(now())
}
